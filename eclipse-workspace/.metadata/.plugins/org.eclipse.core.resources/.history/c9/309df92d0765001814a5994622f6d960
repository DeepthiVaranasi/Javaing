		public static void increaseSizeOfArray() {
			ArrayList<String> list1 = new ArrayList<String>(3);
			list1.add("element1");
			list1.add("element2");
			list1.add("element3");
			list1.ensureCapacity(4);
			list1.add("element4");
			System.out.println(list1);
		}
		
