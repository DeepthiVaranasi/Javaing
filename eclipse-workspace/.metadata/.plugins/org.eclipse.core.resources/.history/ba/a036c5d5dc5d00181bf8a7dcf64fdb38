package com.acme;
import java.io.*;
public class ChapterOne {

	public static void main(String[] args) {
		int[] numbers = new int[] { 3, 7, 4, 4, 5, 6 };
		/*
		 * System.out.println(args.length); ChapterOne.printhello();
